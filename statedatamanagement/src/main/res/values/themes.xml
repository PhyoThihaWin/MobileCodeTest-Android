<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MobileCodeTest" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
    </style>

    <style name="Theme.MobileCodeTest" parent="Base.Theme.MobileCodeTest" />

    <!-- region TextInput Style-->
    <style name="TextInputLayoutStyle.Enable" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="backgroundColor">@color/color_white</item>
        <item name="boxStrokeErrorColor">@color/color_red_error</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="hintTextColor">@color/box_text_color</item>
    </style>

    <!-- region Male/Female TabBarLayout Style-->
    <style name="TabLayoutTextAppearance" parent="TextRegular.Medium">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>